extends layout
block content
	div(class="row")
		div(class="container")
			h1 Book Rank
			div(class="d-flex justify-content-between")
				form(method="POST", action="login", role="form" class="form_login form-sm")
					if errorLogin
						include error/errorLogin
					if sucessCadastro
						include error/sucessCadastro
					div(class="form-group")
						label Login
						input(type="text", name="login", placeholder="Login", class="form-control login_input" onblur="lowerCaseF(this)")
					div(class="form-group")
						label Password
						input(type="password", name="senha", placeholder="Senha", class="form-control login_input")
					div(class="form-group")
						input(type="submit", value="Entrar", class="btn btn-primary form-control")
					div(class="form-group")
						a(href="/usuario/create")
							input(type="button", value="Cadastrar", class="btn btn-info form-control" )